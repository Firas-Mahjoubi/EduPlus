{% extends 'base.html.twig' %}

{% block title %}Events List{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1>Events</h1>

        <a href="{{ path('app_g_events_add') }}" class="btn btn-primary mb-3">Add New Event</a>

        {% if events is not empty %}
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>Start Date</th>
                        <th>End Date</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for event in events %}
                        <tr>
                            <td>{{ event.titre }}</td>
                            <td>{{ event.datedebut|date('d-m-Y H:i') }}</td>
                            <td>{{ event.datefin|date('d-m-Y H:i') }}</td>
                            <td>
                                <a href="{{ path('app_g_events_show', {'id': event.id}) }}" class="btn btn-info btn-sm">View</a>
                                <a href="{{ path('app_g_events_update', {'id': event.id}) }}" class="btn btn-warning btn-sm">Edit</a>
                                <form action="{{ path('app_g_events_delete', {'id': event.id}) }}" method="post" style="display:inline;" onsubmit="return confirm('Are you sure you want to delete this event?');">
                                    <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                                </form>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        {% else %}
            <p>No events available.</p>
        {% endif %}
    </div>
{% endblock %}
